<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.myapplication4">

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="wpisz jak siÄ™ nazywasz"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ques"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="12dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/optionGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ques"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:visibility="invisible">

        <CheckBox
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ques"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="" />

        <CheckBox
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="" />

        <CheckBox
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/option1"
            android:layout_alignLeft="@+id/option1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="" />

        <CheckBox
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/option2"
            android:layout_alignLeft="@+id/option2"
            android:layout_gravity="center_horizontal"
            android:text="" />
    </RadioGroup>

    <TextView
        android:id="@+id/response"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optionGroup"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/response"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="quiz"
        android:text="Start" />

    <TextView
        android:id="@+id/score"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/next"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="31dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>